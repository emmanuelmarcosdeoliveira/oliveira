---
import { Image } from "astro:assets";
import { ClientRouter, fade } from "astro:transitions";
import github from "../assets/icons/github.svg";
import globe from "../assets/icons/globe.svg";
import bikcraft from "../assets/images/bikcraft.png";
import travelgran from "../assets/images/image-01.png";
import Layout from "../layouts/Layout.astro";

const { id } = Astro.params;
const { name, desc, tec, image, imageAlt, repos, deploy } = Astro.props;

interface Props {
  name: string;
  desc: string;
  tec: string;
  imageAlt: string;
  image: ImageMetadata;
}
export function getStaticPaths() {
  return [
    {
      params: { id: "bikcraft" },
      props: {
        name: "Bikcraft",
        desc: "Esse é um site de Venda de Bicicletas elétricas, escolha uma do nossos modelos e saia pedalando!",
        repos: "https://github.com/emmanuelmarcosdeoliveira",
        deploy: "https://bikcraft-woad.vercel.app/",
        image: bikcraft,
        imageAlt: "Imagem projeto Travelgran",
        tec: ["JavaScript", "CSS", "HTML"],
      },
    },
    {
      params: { id: "techNews" },
      props: {
        name: "Travelgran",
        desc: "Rede social onde as pessoas mostram os registros de suas viagens pelo mundo",
        repos: "",
        deploy: "",
        image: travelgran,
        imageAlt: "Imagem projeto Travelgran",
        tec: ["JavaScript", "CSS", "HTML"],
      },
    },
  ];
}
---

<!doctype html>
<html lang="en">
  <head>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{id}</title>
  </head>
  <body>
    <Layout>
      <section
        class="text-base500 bg-contacts px-6 h-screen w-screen bg-cover bg-no-repeat"
      >
        <div class="wrapper">
          <div
            class="h-screen md:flex flex-row justify-center gap-8 items-center"
          >
            <div
              transition:animate={fade({
                duration: "0.6s",
              })}
            >
              <Image
                class="shadow-2xl shadow-base100 rounded-lg"
                width={880}
                src={image}
                alt={imageAlt}
              />
            </div>

            <div transition:animate="slide">
              <h1 class="text-white text-5xl mb-8 sm:mt-8">{name}</h1>
              <p class="mb-6 text-lg">{desc}</p>
              <h3 class="text-xl text-base400/90">
                Tecnologias utilizadas nesse Projeto
              </h3>
              <ul class="flex gap-2 py-4">
                {
                  tec.map((tecs) => (
                    <li class="px-2 py-0.5 text-sm font-medium bg-base500 text-base100 rounded-lg hover:opacity-50 transition-colors cursor-pointer">
                      {tecs}
                    </li>
                  ))
                }
              </ul>
              <div class="flex gap-2">
                <div>
                  <a
                    class="flex items-center justify-center gap-2 rounded-lg px-2 py-2 max-w-32 border border-base400/50 hover:bg-base100 hover:text-base600"
                    href={repos}
                  >
                    <span
                      ><img
                        width="20"
                        height="20"
                        src={github.src}
                        alt=""
                      /></span
                    >
                    GitHub
                  </a>
                </div>
                <div>
                  <a
                    class="flex items-center justify-center gap-2 rounded-lg px-2 py-2 max-w-44 border border-base400/50 hover:bg-base100 hover:text-base600"
                    href={deploy}
                  >
                    <span
                      ><img
                        width="20"
                        height="20"
                        src={globe.src}
                        alt=""
                      /></span
                    >
                    versão On-line
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </Layout>
  </body>
</html>
