---
import { SOCIAL } from "../utils/data";
---

<ul class="flex flex-col items-center mt-12 mb-12 gap-4">
  {
    SOCIAL.map((network) => (
      <li class="w-72 md:w-96 h-20 bg-base300 border border-transparent rounded-lg flex items-center p-5">
        <a href={network.href} target="_blank">
          <div class="flex items-center gap-2">
            <div>
              <img src={network.img.src} alt="" />
            </div>
            <div class="w-60 md:w-80">
              <p class="text-base500 font-medium hover:text-blueColor transition-colors">
                {network.name}
              </p>
            </div>
            <div>
              <img src={network.link.src} alt="" />
            </div>
          </div>
        </a>
      </li>
    ))
  }
</ul>
